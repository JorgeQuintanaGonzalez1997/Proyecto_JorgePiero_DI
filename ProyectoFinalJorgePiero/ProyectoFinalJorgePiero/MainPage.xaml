<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalJorgePiero.MainPage"
             BackgroundColor="#FFFAF0">
   

    <ScrollView>
        <VerticalStackLayout
         Padding="30,50"
         Spacing="25"
         HorizontalOptions="Center"
         VerticalOptions="Center">

            <Frame
             CornerRadius="90"
             HeightRequest="180"
             WidthRequest="180"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             BackgroundColor="White"
             HasShadow="True">
                <Image
                 Source="logo_clinica.jpg"
                 HeightRequest="150"
                 Aspect="AspectFit"
                 SemanticProperties.Description="dot net bot in a race car number eight" />
            </Frame>

            <Label
             Text="¡Bienvenido a clinica Healthy!"
             FontSize="32"
             FontAttributes="Bold"
             TextColor="#512BD4"
             HorizontalOptions="Center"
             SemanticProperties.HeadingLevel="Level1" />

            <Label
             Text="¿Qué usuario eres?"
             FontSize="18"
             TextColor="#3A3A3A"
             HorizontalOptions="Center"
             SemanticProperties.HeadingLevel="Level2"
             SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
             x:Name="btnEntrarCliente"
             Text="Entrar como Cliente"
             BackgroundColor="#512BD4"
             TextColor="White"
             CornerRadius="20"
             HeightRequest="50"
             WidthRequest="250"
             Clicked="btnEntrarCliente_Clicked"
             HorizontalOptions="Center" />

            <Button
             x:Name="btnEntrarAdministrativo"
             Text="Entrar como Administrativo"
             BackgroundColor="#512BD4"
             TextColor="White"
             CornerRadius="20"
             HeightRequest="50"
             WidthRequest="250"
             Clicked="btnEntrarAdministrativo_Clicked"
             HorizontalOptions="Center" />

            <Button
             x:Name="btnEntrarMedico"
             Text="Entrar como Médico"
             BackgroundColor="#512BD4"
             TextColor="White"
             CornerRadius="20"
             HeightRequest="50"
             WidthRequest="250"
             Clicked="btnEntrarMedico_Clicked"
             HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
